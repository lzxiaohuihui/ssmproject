<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.lz.mapper.OrderMapper">

    <select id="list" resultType="com.lz.entity.Order">
        select * from order_ where uid = #{uid}
    </select>

    <insert id="add" parameterType="com.lz.entity.Order">
        insert into order_ (uid,pid,quantity) values(#{uid},#{pid},#{quantity})
    </insert>

    <delete id="delete" parameterType="int">
        delete from order_ where uid = #{uid} and pid = #{pid}
    </delete>

</mapper>